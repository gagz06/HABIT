<!-- Include an external CSS stylesheet -->
<link rel="stylesheet" href="/css/addHabit.css">

<body>
    <!-- Wrapper for the login page -->
    <div id="loginWrapper">
        <!-- Include a header template -->
        <%- include('header'); %>
        
        <!-- Content section of the page -->
        <div id="content">
            <!-- Form for adding a new habit with a POST action -->
            <form action="/createnewhabit" id="addNewHabitForm" method="POST" onsubmit="showAlert()">
                <table>
                    <!-- Table row for Habit input -->
                    <tr>
                        <td>
                            <p>
                                <label>Habit :</label>
                            </p>
                        </td>
                        <td>
                            <p>
                                <input type="text" name="habit" placeholder="Add new Habit">
                            </p>
                        </td>
                    </tr>
                    <!-- Table row for Date input -->
                    <tr>
                        <td>
                            <label>Date :</label>
                        </td>
                        <td>
                            <p>
                                <input type="date" id="inputDate" name="date" value="<%=todayDate%>">
                            </p>
                        </td>
                    </tr>
                    <!-- Table row for Time input -->
                    <tr>
                        <td>
                            <p>
                                <label>Time :</label>
                            </p>
                        </td>
                        <td>
                            <p>
                                <input type="time" id="inputDateTime" name="time" value="<%=todayTime%>">
                            </p>
                        </td>
                    </tr>
                    <!-- Table row for Status dropdown -->
                    <tr>
                        <td>
                            <label>Status:</label>
                        </td>
                        <td>
                            <p>
                                <select name="HabitStatus" id="habitStatus">
                                    <option value="Done">Done</option>
                                    <option value="Not Done">Not Done</option>
                                    <option value="None" selected="true">None</option>
                                </select>
                            </p>
                        </td>
                    </tr>
                    <!-- Table row for submit button -->
                    <tr>
                        <td></td>
                        <td>
                            <p>
                                <input type="submit" id="btnLogin" value="Add Habit">
                            </p>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
        
        <!-- Include a footer template -->
        <%- include('footer'); %>
    </div>
</body>

<!-- Include an external JavaScript file -->
<script src="../../js/script.js"></script>

